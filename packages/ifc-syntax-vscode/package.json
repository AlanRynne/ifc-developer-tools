{
  "name": "@alanrynne/ifc-syntax-vscode",
  "displayName": "IFC Syntax",
  "description": "Extension that brings IFC (Industry Foundation Classes) support to VSCode",
  "repository": "https://github.com/AlanRynne/ifc-developer-tools",
  "icon": "https://github.com/AlanRynne/docs/assets/images/IFC-Syntax-Icon.png",
  "author": {
    "name": "Alan Rynne",
    "email": "alan@rynne.es",
    "url": "https://rynne.es"
  },
  "private": true,
  "keywords": [
    "IFC",
    "Industry Foundation Classes",
    "BuildingSmart",
    "Building Information Modelling",
    "BIM"
  ],
  "version": "0.2.4",
  "publisher": "AlanRynne",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/*.ifc",
    "workspaceContains:**/*.exp"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ifc",
        "aliases": [
          "IFC",
          "ifc"
        ],
        "extensions": [
          ".ifc"
        ],
        "configuration": "./languages/ifc-language-configuration.json"
      },
      {
        "id": "express",
        "aliases": [
          "EXPRESS",
          "exp"
        ],
        "extensions": [
          ".exp"
        ],
        "configuration": "./languages/express-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ifc",
        "scopeName": "source.ifc",
        "path": "./syntaxes/ifc.tmLanguage.json"
      },
      {
        "language": "express",
        "scopeName": "source.express",
        "path": "./syntaxes/express.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm tsconfig.tsbuildinfo",
    "build": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.15",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@alanrynne/ifc-syntax-ast-parser": "^0.2.4",
    "@alanrynne/ifc-syntax-express-parser": "^0.2.4",
    "@alanrynne/ifc-syntax-server": "^0.2.4",
    "vscode-languageclient": "^9.0.1"
  }
}
