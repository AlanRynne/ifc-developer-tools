{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile VSCode Extension",
      "type": "npm",
      "script": "build",
      "group": "build",
      "options": {
        "cwd": "./packages/ifc-syntax-vscode"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Watch VSCode Extension",
      "type": "npm",
      "script": "watch",
      "options": {
        "cwd": "./packages/ifc-syntax-vscode"
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "group": "1"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "type": "npm",
      "script": "watch",
      "path": "packages/ifc-syntax-server/",
      "problemMatcher": ["$tsc-watch"],
      "label": "Watch IFC Parser",
      "detail": "tsc -b -w",
      "isBackground": true,
      "presentation": {
        "group": "1"
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "path": "packages/ifc-syntax-parser/",
      "problemMatcher": ["$tsc-watch"],
      "label": "Watch LSP Server",
      "detail": "tsc --watch",
      "isBackground": true,
      "presentation": {
        "group": "1"
      }
    },
    {
      "label": "Server setup",
      "dependsOn": [
        "Watch IFC Parser",
        "Watch LSP Server",
        "Watch VSCode Extension"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
